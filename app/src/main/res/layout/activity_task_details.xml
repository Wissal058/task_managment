<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card principale avec les détails -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Titre -->
                    <TextView
                        android:id="@+id/tvTaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Titre de la tâche"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- Statut et Priorité -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="En attente"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/priority"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPriority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Haute"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_description"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTaskDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description de la tâche"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- Dates -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Date de création -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/created_date"
                                android:textSize="14sp"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvCreatedDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01/01/2025"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary" />

                        </LinearLayout>

                        <!-- Date d'échéance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/due_date"
                                android:textSize="14sp"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvDueDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15/01/2025"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary" />

                        </LinearLayout>

                        <!-- Date de complétion (conditionnelle) -->
                        <TextView
                            android:id="@+id/tvCompletedDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/completed_date"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="16dp" />

                    <!-- Utilisateurs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Assigné à -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/assigned_to"
                                android:textSize="14sp"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvAssignedTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ahmed Alami"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary" />

                        </LinearLayout>

                        <!-- Créé par -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/created_by"
                                android:textSize="14sp"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvCreatedBy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Admin"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Boutons d'action sur le statut -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnStartTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_task"
                android:backgroundTint="@color/statusInProgress"
                android:textColor="@color/textWhite"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnCompleteTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/complete_task"
                android:backgroundTint="@color/statusCompleted"
                android:textColor="@color/textWhite"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnCancelTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_task"
                android:backgroundTint="@color/statusCancelled"
                android:textColor="@color/textWhite"
                android:layout_marginBottom="16dp" />

            <!-- Boutons admin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnEditTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_task"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/textWhite"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnDeleteTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete_task"
                android:backgroundTint="@color/error"
                android:textColor="@color/textWhite" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>