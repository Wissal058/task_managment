<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titre de la tâche -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre de la tâche"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Indicateur de retard -->
        <TextView
            android:id="@+id/tvOverdueIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠️ TÂCHE EN RETARD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/error"
            android:background="@color/error"
            android:backgroundTint="#20F44336"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Card Principale -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Statut et Priorité -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="16dp">

                    <!-- Statut -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:layout_marginBottom="4dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="En attente"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:padding="8dp"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Priorité -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/priority"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:layout_marginBottom="4dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPriority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/tvPriority"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haute"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:padding="8dp"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="12dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description de la tâche..."
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="12dp" />

                <!-- Dates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Date de création -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/created_date"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvCreatedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01/01/2024"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                    </LinearLayout>

                    <!-- Date d'échéance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/due_date"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvDueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31/01/2024"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="12dp" />

                <!-- Utilisateurs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Assignée à -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/assigned_to"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvAssignedTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahmed Alami"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                    </LinearLayout>

                    <!-- Créée par -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/created_by"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:id="@+id/tvCreatedBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Administrateur"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Boutons de changement de statut (Employé) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStartTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_task"
                android:backgroundTint="@color/statusInProgress"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCompleteTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/complete_task"
                android:backgroundTint="@color/statusCompleted"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCancelTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_task"
                android:backgroundTint="@color/statusCancelled"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Boutons d'édition/suppression (Admin) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnEditTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_task"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDeleteTask"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete_task"
                android:backgroundTint="@color/error"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>